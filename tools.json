{
    "tools": [
        {
            "name": "updateMenuPrice",
            "description": "Update menu item price on Zomato or Swiggy platform",
            "parameters": {
                "type": "object",
                "properties": {
                    "item_id": {
                        "type": "string",
                        "description": "Menu item ID (e.g., 'item_001')"
                    },
                    "platform": {
                        "type": "string",
                        "description": "Platform to update price on",
                        "enum": ["zomato", "swiggy"]
                    },
                    "new_price": {
                        "type": "number",
                        "description": "New price in INR",
                        "minimum": 1
                    }
                },
                "required": ["item_id", "platform", "new_price"]
            }
        },
        {
            "name": "createOffer",
            "description": "Create a new discount offer/coupon for a platform",
            "parameters": {
                "type": "object",
                "properties": {
                    "platform": {
                        "type": "string",
                        "description": "Platform to create offer for",
                        "enum": ["zomato", "swiggy"]
                    },
                    "title": {
                        "type": "string",
                        "description": "Offer title/code (e.g., 'SAVE20')"
                    },
                    "description": {
                        "type": "string",
                        "description": "Offer description for customers"
                    },
                    "discount_type": {
                        "type": "string",
                        "description": "Type of discount",
                        "enum": ["percentage", "fixed"]
                    },
                    "discount_value": {
                        "type": "number",
                        "description": "Discount value (percentage or fixed amount)",
                        "minimum": 1
                    },
                    "max_discount": {
                        "type": "number",
                        "description": "Maximum discount amount (for percentage offers)",
                        "minimum": 1
                    },
                    "min_order": {
                        "type": "number",
                        "description": "Minimum order value to apply offer",
                        "minimum": 0
                    },
                    "valid_until": {
                        "type": "string",
                        "description": "Offer validity date (YYYY-MM-DD)"
                    },
                    "active": {
                        "type": "boolean",
                        "description": "Whether offer is active"
                    }
                },
                "required": ["platform", "title", "description", "discount_type", "discount_value", "min_order"]
            }
        },
        {
            "name": "toggleItemAvailability",
            "description": "Toggle menu item availability (available/unavailable)",
            "parameters": {
                "type": "object",
                "properties": {
                    "item_id": {
                        "type": "string",
                        "description": "Menu item ID to toggle availability"
                    }
                },
                "required": ["item_id"]
            }
        },
        {
            "name": "getStoreInfo",
            "description": "Get restaurant store information and platform details",
            "parameters": {
                "type": "object",
                "properties": {
                    "platform": {
                        "type": "string",
                        "description": "Specific platform info or all platforms",
                        "enum": ["zomato", "swiggy", "all"]
                    }
                },
                "required": []
            }
        },
        {
            "name": "getMenuItems",
            "description": "Get menu items with platform-specific pricing",
            "parameters": {
                "type": "object",
                "properties": {
                    "platform": {
                        "type": "string",
                        "description": "Platform to get pricing for",
                        "enum": ["zomato", "swiggy", "all"]
                    },
                    "category": {
                        "type": "string",
                        "description": "Filter by food category"
                    },
                    "available_only": {
                        "type": "boolean",
                        "description": "Show only available items"
                    }
                },
                "required": []
            }
        },
        {
            "name": "getActiveOffers",
            "description": "Get active offers and coupons for platforms",
            "parameters": {
                "type": "object",
                "properties": {
                    "platform": {
                        "type": "string",
                        "description": "Platform to get offers for",
                        "enum": ["zomato", "swiggy", "all"]
                    }
                },
                "required": []
            }
        },
        {
            "name": "updateStoreInfo",
            "description": "Update restaurant store information",
            "parameters": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Restaurant name"
                    },
                    "description": {
                        "type": "string",
                        "description": "Restaurant description"
                    },
                    "phone": {
                        "type": "string",
                        "description": "Contact phone number"
                    },
                    "email": {
                        "type": "string",
                        "description": "Contact email address"
                    }
                },
                "required": []
            }
        }
    ]
}